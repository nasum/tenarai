= form_for signin, url: signin_path do |f|
  - if signin.errors.any?
    #error_explanation
      %h2
        = pluralize(signin.errors.count, "error")
      %ul
        - signin.errors.full_messages.each do |message|
          %li
            = message

  .form-group
    = f.label :email
    = f.text_field :email, class: 'form-control'
  .form-group
    = f.label :password
    = f.password_field :password, class: 'form-control'
  .actions
    = f.submit "Login", class: 'btn btn-primary'
