.row
  .col-md-12
    %p
      = link_to new_article_path, class:'btn btn-default btn-lg' do
        %span.glyphicon.glyphicon-plus
        %span New Article
.row
  .col-md-12
    %ul.list-group
      - @articles.each do |article|
        %li.list-group-item.row
          .col-md-1
            = link_to edit_article_path(article), class: 'btn btn-default btn-sm' do
              .glyphicon.glyphicon-pencil
              Edit
          .col-md-8
            = link_to article_path(article) do
              = article.title
          .col-md-3
            .badge
              = article.created_at
.row
  .col-md-8
    = paginate @articles
