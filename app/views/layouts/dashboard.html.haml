!!!
%html
  %head
    %title Tenarai
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    = render partial: "layouts/header"
    = render partial: "layouts/flash"
    .content-body
      .container
        .row
          .col-sm-3.col-md-2.sidebar
            %ul.nav.nav-pills.nav-stacked
              %li{ class: ('active' if controller.controller_name == 'dashboard') }
                = link_to "Overview", dashboard_index_path
              %li{ class: ('active' if controller.controller_name == 'users') }
                = link_to "Profile", user_path(current_user)
              %li{ class: ('active' if controller.controller_name == 'articles') }
                = link_to "Articles", articles_path(current_user)
              %li
                = link_to "Home", root_path
          .col-sm-9.col-md-10.main
            = yield
    = render partial: "layouts/footer"
