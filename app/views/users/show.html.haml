.row
  .col-md-12
    %p
      = link_to edit_user_path(@user), class: 'btn btn-default btn-lg' do
        %span.glyphicon.glyphicon-pencil
        %span Edit
.row
  .col-md-12
    %p
      %ul.list-group
        %li.list-group-item
          %strong Name:
          = @user.name
        %li.list-group-item
          %strong Email:
          = @user.email
